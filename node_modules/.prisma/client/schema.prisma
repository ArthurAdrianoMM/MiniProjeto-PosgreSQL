// Datasource
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Generator
generator client {
  provider = "prisma-client-js"
}

// Map app frequency strings to enum values
enum Frequency {
  DIARIO    @map("Di√°rio")
  SEMANAL   @map("Semanal")
  QUINZENAL @map("Quinzenal")
  MENSAL    @map("Mensal")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  habits Habit[]
}

model Habit {
  id          String    @id @default(uuid())
  name        String
  description String    @default("")
  frequency   Frequency
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, name])
  @@index([userId, isActive])
}
